generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String?
  recommendations String[] @default([])
  score Float
  pastResumes PastResume[]  @relation("UserResumes")
}

model PastResume{
  id Int @id @default(autoincrement())
  recommendations String[] @default([])
  score Float
  user User @relation("UserResumes", fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
}